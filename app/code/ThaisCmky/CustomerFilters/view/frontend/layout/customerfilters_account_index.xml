<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Advanced Product Search</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="ThaisCmky\CustomerFilters\Block\Form" name="customer_filters" template="ThaisCmky_CustomerFilters::customer_filters.phtml"/>
            <uiComponent name="tc_csfilters_prodlist"/>
        </referenceContainer>
    </body>
</page>
